<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EventCommentActivityFragment"
    tools:showIn="@layout/activity_event_comment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/commentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibPost"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:src="@drawable/ic_send_red_800_24dp" />
        </LinearLayout>

        <View
            android:id="@+id/blackBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/commentContainer"
            android:background="@color/black_alpha" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/blackBar"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </RelativeLayout>


</android.support.v4.widget.SwipeRefreshLayout>
